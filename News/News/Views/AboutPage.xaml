             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="News.Views.AboutPage"
             Title="About News">
    <AbsoluteLayout>
        <Image x:Name="newsPhoto" Source="newsPhoto" Opacity="0.5"  />
        <StackLayout>

        <Frame >
            <Label Text="Welcome to my News Page!" HorizontalTextAlignment="Center" TextColor="LightGreen" FontSize="36"/>
        </Frame>

        <Label Text="Created by Alexandra Salén Sammueang" VerticalTextAlignment="End" FlowDirection="RightToLeft"  FontSize="Small" FontAttributes="Italic" TextColor="LightGreen" />
    </StackLayout>
    </AbsoluteLayout>
</ContentPage>
